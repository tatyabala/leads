{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
<!-- ======= Breadcrumbs ======= -->
     <section class="breadcrumbs">
        <div class="container">
  
          <ol>
            <li><a href="{{url}}">Home</a></li>
            
            <li><a href="{{url}}">Blog</a></li>
          </ol>
  
  
        </div>
      </section><!-- End Breadcrumbs -->

     <!-- ======= Post Grid Section ======= -->
     <section id="posts" class="posts">
        <div class="container">
          <div class="row g-5">
            <div class="col-lg-8">
                {{#post}}
              <div class="post-entry-1 lg">
                <article class="{{post_class}} {{#unless feature_image}}no-image{{/unless}}">
                <div class="post-meta"> <span class="tag">
                {{#primary_tag}}
                    <a href="{{url}}">{{name}}</a>
                {{/primary_tag}}
            </span> <span class="date"></span> <span class="mx-1"></span> 
                <span><time datetime="{{date format="YYYY-MM-DD"}}">
                    {{date format="D MMMM YYYY"}}
                  </time></span></div>
                <h2><a href="{{url}}">{{title}}</a></h2>
                 <section class="mt-5 mb-4 d-block">
                        <div class="post-content">
                            {{!-- Display the post content --}}
                            {{content}}
                        </div>
                    </section>

                {{!-- Displays the featured image if exists --}}
                {{#if feature_image}}
                    <figure>
                        <img src="{{img_url feature_image}}" alt="{{title}}" class="img-fluid" />
                    </figure>
                {{/if}}    
                 <p class="m-3">
                  {{tags prefix="Tagged in: " separator="&comma; " limit="3"}}
                </p>
                </article>
              </div>
              {{/post}}
            
            </div>
  
              <div class="col-lg-4">
  
                <!-- Trending Section -->
                  <div class="trending">
                    <h3>Trending</h3>
                    <ul class="trending-post">
                        {{#get "posts" limit="10" order="views desc"}}
                        {{!-- Your code to display the most viewed post goes here --}}
                      {{#foreach posts}}
                      <li class=".h-no-bullet">
                        <a href="{{url}}">
                          <h2>{{title}}</h2>
                        </a>
                      </li>
                       {{/foreach}}
                    {{else}}
                    <p>No posts found.</p>
                    {{/get}}
                    </ul>
                  </div>
  
                </div> <!-- End Trending Section -->
            </div>
  
          </div> <!-- End .row -->
        </div>
      </section> <!-- End Post Grid Section -->


      
<section id="posts" class="posts">
    <div class="container">
      <h2>Related Posts</h2>
      <hr>
          {{#post}}
                        {{#get "posts" filter="primary_tag:{{primary_tag.slug}}" limit="3"}}


        <div class="row row-eq-height">
            {{#foreach posts}}
                <div class="col-lg-4 col-xs-6 col-md-4 row-eq-height">
                    {{> "post-card"}}
                </div>
            {{/foreach}}
        </div> <!-- End .row -->
                <!-- Pagination -->
 {{/get}}
                    {{/post}}
    <!-- End Pagination -->
    </div>
</section> <!-- End Post Grid Section -->