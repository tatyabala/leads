{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#get "posts" limit="1" order="views desc"}}
    {{#if posts}}
        <main id="main">
            <div class="container">
                <div class="row g-0 d-flex bg-light post-section">
                    <div class="col-sm-8 col-md-6 kg-image-card kg-width-wide">
                        <a href="{{posts.[0].url}}">
                            <img src="{{#if posts.[0].feature_image}}{{posts.[0].feature_image}}{{else}}assets/img/post-landscape-6.jpg{{/if}}" alt="{{posts.[0].title}}" class="img-fluid">
                        </a>
                    </div>
                    <div class="col-lg-6">
                        <div class="half-post-entry">
                            <div class="contents">
                                <span class="caption">Lastest Posts</span>
                                <h2><a href="{{posts.[0].url}}">{{posts.[0].title}}</a></h2>
                                <p>{{posts.[0].excerpt}}</p>
                                <div class="post-meta">
                                    <div>
                                        <span class="date-read">{{date posts.published_at timeago="true"}}<span class="mx-1"></span> {{posts.reading_time}}</span>
                                    </div>
                                    <div class="tags">
                                       {{#each posts.[0].tags}}
                        <a href="{{url}}/tag/{{slug}}">{{name}}</a>
                    {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>{{else}}
        <p>No posts found.</p>
    {{/if}}
{{/get}}





<section id="posts" class="posts">
    <div class="container">
        <div class="row row-eq-height">
            {{#foreach posts}}
                <div class="col-lg-4 col-xs-6 col-md-4 row-eq-height">
                    {{> "post-card"}}
                </div>
            {{/foreach}}
        </div> <!-- End .row -->
                <!-- Pagination -->
    <div class="col-12 text-center">
        {{pagination}}
    </div>
    <!-- End Pagination -->
    </div>
</section> <!-- End Post Grid Section -->
         




