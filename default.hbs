<!doctype html>
<html lang="{{@site.locale}}">

<head>
    <title>{{meta_title}}</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    {{!-- Mobile Meta --}}
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{asset "css/bootstrap/css/bootstrap.min.css"}}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    {{!-- Custom Styles --}}
    <link rel="stylesheet" href="{{asset "css/main.css"}}">

    {{!-- Dynamic header content for SEO, meta tags, code injection etc --}}
    {{ghost_head}}
</head>

<body class="{{body_class}}">

 {{!-- Navigation bar --}}

    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white d-flex d-block">
            <div class="container">
                <a class="navbar-brand" href="{{@site.url}}">

  
                        {{#if @site.logo}}
                            <img src="{{@site.logo}}" alt="{{@site.title}}">
                        {{else}}
                            {{@site.title}}
                        {{/if}}
                    </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 nav">
                    {{navigation}}
                     <button class="gh-search gh-icon-btn" aria-label="Search this site" data-ghost-search>{{> "icons/search"}}</button>
                    </ul>
                </div>
             </div>
        </nav>
    </header>
     
  
    {{!-- End Navbar --}}

    {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
    {{{body}}}

    {{!-- Footer content goes here --}}

    {{!-- End of footer --}}

    {{!-- Dynamic footer content from code injection etc --}}
    <footer>
        <div class="site-section subscribe bg-light">
            <div class="container">
              <form action="#" class="row align-items-center">
                <div class="col-md-6 mr-auto">
                <h2>Get the latest news in your inbox</h2>
                </div>
                <div class="col-md-6 ml-auto">
                  <div class="d-flex">
                  <input type="email" class="form-control" placeholder="Enter your email">
                  <button type="submit" class="btn btn-secondary">Subscribe</button>
                  </div>
                </div>
              </form>
            </div>
           
          <hr>
          <div class="h-c-footer__global">
            <div class="container">
              <div class="row">
                <div class="col-col-lg-5 mr-auto">
                  &copy; {{date format="YYYY"}} {{@site.title}}</a> | All rights reserved
                </div>
                <div class="col-col-lg-8 mr-auto">
                 
                </div>
              </div>
            </div>
          </div>
          </div>
      </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery Slim first, then Popper.js, then Bootstrap JS -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
   
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    {{ghost_foot}}
</body>

</html>